FROM alpine:latest
RUN apk update && apk add \
    tor \
    --update-cache --repository http://dl-3.alpinelinux.org/alpine/edge/testing/ \
    && rm -rf /var/cache/apk/*

ENV EXIT_NODES ""
ENV COUNTRY ""
ENV PASSWORD "admin"

EXPOSE 9052
EXPOSE 9053
COPY /app/crawler/crawler_services/raw/torrc.default.docker /etc/tor/torrc.default
RUN chown -R tor /etc/tor
USER tor
ENTRYPOINT [ "tor" ]
CMD [ "-f", "/etc/tor/torrc.default" ]